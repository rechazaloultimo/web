        height={1000}
      />
      <CardGaleria
        imgPath="sanfeng/sanfeng.webp"
        altText="La escultura de SangFeng en el Valle Xiaoyao (Valle del Ocio) dentro del complejo de las Montañas Wudang."
        width={1000}
        height={1000}
      />

