---
import Footer from "@/components/Footer.astro";
import "@/styles/main.css";
import "@/styles/hero.css";
import "@/styles/nav.css";
import "@/styles/multimedia.css";

// --- (Script de Astro) ---

// 1. Definimos las Props que la página DEBE pasarnos.
interface Props {
  title: string;
  description: string;
  ogImage?: string;
  author?: string;
  keywords?: string;
  canonicalUrl?: string;
  lang?: string;
}
const { title, description } = Astro.props;

// 2. Calculamos la URL canónica automáticamente
// (Asegúrate de tener 'site' en tu astro.config.mjs si usas esto)
// const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
// O de forma más simple por ahora:
const canonicalURL = "https://rodrigopizarro.com.ar" + Astro.url.pathname;

// 3. Definimos la imagen OG por defecto
const defaultOgImage = "https://rodrigopizarro.com.ar/img-mias/001.jpg";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@400;600;700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <link rel="canonical" href={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={defaultOgImage} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />

    <script
      type="application/ld+json"
      set:html={`
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Rodrigo Pizarro",
        "description": "${description}",
        "url": "${canonicalURL}"
      }
    `}
    />

    <slot name="extra-head" />
  </head>

  <body class="rice-paper-bg flex flex-col min-h-screen">
    <main>
      <slot />
    </main>

    <Footer />

    <script>
      import "../js/animations.js";
      import "../js/global.js";
      import "../js/theme-toggle.js";
      import "../js/photoswipe-init.js";
      import "../js/navigation.js";
    </script>
  </body>
</html>
